<odoo>
    <template id="home_web_portal" name="Home">
        <t t-call="web.frontend_layout">
            <t t-set="title">Home</t>
            <div class="container">
                <h1>Welcome to Hola Odoo</h1>
            </div>
            <div class="container">
                <h2>Product Categories</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name v1</th>
                            <th>Name v2</th>
                            <th>Parent</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="categories" t-as="category">
                            <tr>
                                <td>
                                    <a
                                        t-attf-href="/hola/odoo/v1/products/category/{{category.id}}"
                                    >
                                        <span t-field="category.name" />
                                    </a>
                                </td>
                                <td>
                                    <a
                                        t-attf-href="/hola/odoo/v2/products/category/{{slug(category)}}"
                                    >
                                        <span t-field="category.name" />
                                    </a>
                                </td>
                                <td>
                                    <t t-out="category.parent_id.name" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="products_category_web_portal" name="Products by Category">
        <t t-call="web.frontend_layout">
            <t t-set="title">Products</t>

            <div class="container">
                <h2 t-out="category_name" />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="products" t-as="product">
                            <tr>
                                <td>
                                    <t t-out="product.name" />
                                </td>
                                <td>
                                    <t t-if="product.type == 'consu'">
                                        Goods
                                    </t>
                                    <t t-if="product.type == 'service'">
                                        Service
                                    </t>
                                    <t t-if="product.type == 'combo'">
                                        Combo
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
