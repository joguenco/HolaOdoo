<odoo>
    <template id="products_category_web_portal" name="Products by Category">
        <t t-call="web.frontend_layout">
            <t t-set="title">
				Products
            </t>
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Inicio</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <t t-out="categorie_name" />
                        </li>
                    </ol>
                </nav>

                <h2 t-out="category_name" />
                <div t-if="pager" class="o_portal_pager d-flex justify-content-center">
                    <t t-call="web_portal_ii.pager" />
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
								Name
                            </th>
                            <th>
								Type
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="products" t-as="product">
                            <tr>
                                <td>
                                    <t t-out="product.name" />
                                </td>
                                <td>
                                    <t t-if="product.type == 'consu'">
										Goods
                                    </t>
                                    <t t-if="product.type == 'service'">
										Service
                                    </t>
                                    <t t-if="product.type == 'combo'">
										Combo
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="pager" name="Pager" inherit_id="portal.pager" />
</odoo>
