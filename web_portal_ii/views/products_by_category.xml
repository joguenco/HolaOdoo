<odoo>
    <template id="products_category_web_portal" name="Products by Category">
        <t t-call="web.frontend_layout">
            <t t-set="title">
				Products
			</t>
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
								Inicio
							</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <t t-out="categorie_name" />
                        </li>
                    </ol>
                </nav>
                <h2 t-out="category.name" />

                <t t-call="website.website_search_box_input">
                    <t t-set="limit" t-valuef="0" />
                    <t t-set="placeholder">Search Products ...</t>
                    <t t-set="search" t-valuef="{{search}}" />
                    <t t-set="search_count" t-valuef="{{total}}" />
                    <t
                        t-set="action"
                        t-valuef="/hola/odoo/v2/products/category/{{slug(category)}}"
                    />
                </t>

                <div t-if="pager" class="o_portal_pager d-flex justify-content-center">
                    <t t-call="portal.pager" />
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
								Name
							</th>
                            <th>
								Type
							</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="products" t-as="product">
                            <tr>
                                <td>
                                    <t t-out="product.name" />
                                </td>
                                <td>
                                    <t t-out="product.type" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
